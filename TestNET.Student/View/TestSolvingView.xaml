<UserControl 
    x:Class="TestNET.Student.View.TestSolvingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:TestNET.Student.View"
    xmlns:model="clr-namespace:TestNET.Shared.Model;assembly=TestNET.Shared"
    xmlns:sharedserv="clr-namespace:TestNET.Shared.Service;assembly=TestNET.Shared"
    xmlns:viewmodel="clr-namespace:TestNET.Student.ViewModel" 
    xmlns:serv="clr-namespace:TestNET.Student.Service" 
    xmlns:latex="clr-namespace:WpfMath.Controls;assembly=WpfMath"
    d:DataContext="{d:DesignInstance Type=viewmodel:TestSolvingViewModel}"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <Grid.Resources>
            <Style x:Key="QuestionBorder" TargetType="Border">
                <Setter Property="BorderBrush" Value="#FF80c0ff"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
            </Style>

            <Style x:Key="QuestionIndex" TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="#FF80c0ff"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Padding" Value="0"/>
            </Style>

            <Style x:Key="QuestionBody" TargetType="StackPanel">
                <Setter Property="Margin" Value="15"/>
            </Style>
        </Grid.Resources>


        <StackPanel>
            <Label Content="{Binding Test.Name}"
                   FontSize="25"/>

            <ListView ItemsSource="{Binding Test.Questions}"
                      BorderThickness="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="Margin" Value="0,0,0,20"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.Resources>

                    <sharedserv:IndexConverter x:Key="IndexConverter" />

                    <DataTemplate DataType="{x:Type model:ShortAnswerQuestion}">
                        <Border Style="{StaticResource QuestionBorder}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <Label Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"
                                           Style="{StaticResource QuestionIndex}"/>

                                    <WrapPanel Grid.Column="1"
                                               Background="#FFbfdFff">

                                        <Label Content="{Binding Points}" 
                                               FontSize="16"
                                               Padding="5,2,0,0"
                                               HorizontalAlignment="Right"
                                               VerticalContentAlignment="Center"
                                               VerticalAlignment="Stretch"/>
                                        <Label Content=" Pts."
                                               FontSize="16"
                                               Padding="0,2,5,0"
                                               HorizontalAlignment="Right"
                                               VerticalContentAlignment="Center"
                                               VerticalAlignment="Stretch"/>
                                    </WrapPanel>
                                </Grid>
                                <StackPanel Style="{StaticResource QuestionBody}">
                                    <WrapPanel Margin="0,0,0,20">
                                        <Label FontSize="16">
                                            <Label.Style>
                                                <Style TargetType="Label">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TextIsNotMath}"
                                                                     Value="True">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Label.Style>
                                            <Label.Content>
                                                <AccessText Text="{Binding Text}" TextWrapping="Wrap"/>
                                            </Label.Content>
                                        </Label>
                                        <Label>
                                            <Label.Content>
                                                <latex:FormulaControl Formula="{Binding Text}"/>
                                            </Label.Content>
                                            <Label.Style>
                                                <Style TargetType="Label">
                                                    <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TextIsMath}"
                                                             Value="True">
                                                            <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Label.Style>
                                        </Label>
                                    </WrapPanel>

                                    <TextBox Text="{Binding Answer.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>


                    <DataTemplate DataType="{x:Type model:MultipleChoiceQuestion}">
                        <DataTemplate.Resources>

                            <DataTemplate x:Key="NoMath">
                                <RadioButton Content="{Binding Text}"
                                             GroupName="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=DataContext.UniqueId}"
                                             IsChecked="{Binding IsCorrect}"/>
                            </DataTemplate>
                            <DataTemplate x:Key="WithMath">
                                <RadioButton GroupName="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=DataContext.UniqueId}"
                                             IsChecked="{Binding IsCorrect}">
                                    <RadioButton.Content>
                                        <latex:FormulaControl Formula="{Binding Text}"/>
                                    </RadioButton.Content>
                                </RadioButton>
                            </DataTemplate>

                            <Style TargetType="ContentPresenter" x:Key="ContainerStyle">
                                <Setter Property="Margin" Value="2"/>
                                <Setter Property="ContentTemplate" Value="{StaticResource NoMath}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=DataContext.TextIsMath}"
                                                 Value="True">
                                        <Setter Property="ContentTemplate" 
                                                Value="{StaticResource WithMath}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataTemplate.Resources>

                        <Border  Style="{StaticResource QuestionBorder}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <Label Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"
                                           Style="{StaticResource QuestionIndex}"/>

                                    <WrapPanel Grid.Column="1"
                                               Background="#FFbfdFff">
                                        
                                    </WrapPanel>
                                </Grid>

                                <StackPanel Style="{StaticResource QuestionBody}">


                                    <WrapPanel Margin="0,0,0,10">

                                        <Label FontSize="16">
                                            <Label.Style>
                                                <Style TargetType="Label">
                                                    <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TextIsNotMath}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Label.Style>
                                            <Label.Content>
                                                <AccessText Text="{Binding Text}" TextWrapping="Wrap"/>
                                            </Label.Content>
                                        </Label>
                                        <Label>
                                            <Label.Content>
                                                <latex:FormulaControl Formula="{Binding Text}"/>
                                            </Label.Content>
                                            <Label.Style>
                                                <Style TargetType="Label">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TextIsMath}"
                                                                     Value="True">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Label.Style>
                                        </Label>
                                    </WrapPanel>

                                    <ItemsControl ItemsSource="{Binding PossibleAnswers}"
                                                  ItemContainerStyle="{StaticResource ContainerStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type model:MultipleChoiceManyQuestion}">
                        <DataTemplate.Resources>

                            <DataTemplate x:Key="NoMath">
                                <CheckBox Content="{Binding Text}"
                                          IsChecked="{Binding IsCorrect}"/>
                            </DataTemplate>
                            <DataTemplate x:Key="WithMath">
                                <CheckBox IsChecked="{Binding IsCorrect}">
                                    <CheckBox.Content>
                                        <latex:FormulaControl Formula="{Binding Text}"/>
                                    </CheckBox.Content>
                                </CheckBox>
                            </DataTemplate>

                            <Style TargetType="ContentPresenter" x:Key="ContainerStyle">
                                <Setter Property="Margin" Value="2"/>
                                <Setter Property="ContentTemplate" Value="{StaticResource NoMath}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=DataContext.TextIsMath}"
                                                 Value="True">
                                        <Setter Property="ContentTemplate" 
                                                Value="{StaticResource WithMath}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataTemplate.Resources>
                        <Border Style="{StaticResource QuestionBorder}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <Label Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"
                                           Style="{StaticResource QuestionIndex}"/>

                                    <WrapPanel Grid.Column="1"
                                               Background="#FFbfdFff">

                                    </WrapPanel>
                                </Grid>

                                <StackPanel Style="{StaticResource QuestionBody}">

                                    <Label Content="{Binding Text}"
                                           FontSize="16">
                                        <Label.Style>
                                            <Style TargetType="Label">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding TextIsNotMath}"
                                                                 Value="True">
                                                        <Setter Property="Visibility"
                                                                Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Label.Style>
                                    </Label>
                                    <Label>
                                        <Label.Content>
                                            <latex:FormulaControl Formula="{Binding Text}"/>
                                        </Label.Content>
                                        <Label.Style>
                                            <Style TargetType="Label">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding TextIsMath}"
                                                                 Value="True">
                                                        <Setter Property="Visibility"
                                                                Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Label.Style>
                                    </Label>

                                    <ItemsControl ItemsSource="{Binding PossibleAnswers}"
                                                  ItemContainerStyle="{StaticResource ContainerStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.Resources>
            </ListView>

            <Button Content="Submit"
                    Command="{Binding SubmitCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
