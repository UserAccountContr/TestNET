<UserControl 
    x:Class="TestNET.Teacher.View.EditTestView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:TestNET.Teacher.View"
	xmlns:model="clr-namespace:TestNET.Shared.Model;assembly=TestNET.Shared"
	xmlns:viewmodel="clr-namespace:TestNET.Teacher.ViewModel" 
    xmlns:serv="clr-namespace:TestNET.Teacher.Service"
    d:DataContext="{d:DesignInstance Type=viewmodel:EditTestViewModel}"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <!--Grid.Column="4"-->
            <MenuItem Header="Back"
                              Command="{Binding BackCommand}"/>
            <MenuItem Header="Add question">
                <MenuItem Header="Short answer"
                                  Command="{Binding AddSAQuestionCommand}" />
                <MenuItem Header="Multiple choice"
                                  Command="{Binding AddMCQuestionCommand}" />
                <MenuItem Header="Multiple choice (Many correct)"
                                  Command="{Binding AddMCMQuestionCommand}" />
            </MenuItem>
            <MenuItem Header="Save"
                              Command="{Binding SaveChangesCommand}"/>
            <MenuItem Header="Cancel"
                              Command="{Binding CancelCommand}"/>
        </Menu>

        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                    <!--
                <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Button Content="Back" 
                        Grid.Column="0"
                        Command="{Binding BackCommand}" 
                        IsEnabled="{Binding IsNotBusy}"/>
                <Button Content="Add Question"
                        Grid.Column="1"
                        Command="{Binding AddQuestionCommand}"/>
                <Button Content="Save"
                        Grid.Column="2"
                        Command="{Binding SaveChangesCommand}"/>
                <Button Content="Cancel"
                        Grid.Column="3"
                        Command="{Binding CancelCommand}"/>
                </Grid>
                -->
                <WrapPanel Grid.Row="0">
                    <Label Content="Test Name: "/>
                    <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Row="1"
                         VerticalContentAlignment="Center"/>
                </WrapPanel>
                <ListView Grid.Row="1" 
                      ItemsSource="{Binding Questions}">
                    <ListView.Resources>

                        <serv:IndexConverter x:Key="IndexConverter" />
                        <serv:IntConverter x:Key="IntConverter" />

                        <DataTemplate DataType="{x:Type model:ShortAnswerQuestion}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"
                                   ContentStringFormat="{}{0}."
                                   Grid.Column="0"/>
                                <TextBox Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   Grid.Column="1"/>
                                <TextBox Text="{Binding Answer.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   Grid.Column="2"/>
                                <WrapPanel Grid.Column="3">
                                    <Label Content="Pts:"/>
                                    <TextBox Text="{Binding Points, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Width="30"/>
                                </WrapPanel>
                            </Grid>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type model:MultipleChoiceQuestion}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="250"/>
                                </Grid.ColumnDefinitions>

                                <Label Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"
                                   ContentStringFormat="{}{0}."
                                   Grid.Column="0"/>
                                <TextBox Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   Grid.Column="1"/>
                                <StackPanel Grid.Column="2">
                                    <ItemsControl ItemsSource="{Binding PossibleAnswers}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type model:Answer}">
                                                <WrapPanel>
                                                    <RadioButton GroupName="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.UniqueId}"
                                                                 IsChecked="{Binding IsCorrect, Mode=TwoWay}" />
                                                    <TextBox Text="{Binding Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                                </WrapPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <Button Content="+"
                                        Command="{Binding AddPosAnsCommand}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type model:MultipleChoiceManyQuestion}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="250"/>
                                </Grid.ColumnDefinitions>

                                <Label Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"
                                   ContentStringFormat="{}{0}."
                                   Grid.Column="0"/>
                                <TextBox Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   Grid.Column="1"/>
                                <StackPanel Grid.Column="2">
                                    <ItemsControl ItemsSource="{Binding PossibleAnswers}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type model:Answer}">
                                                <WrapPanel>
                                                    <CheckBox IsChecked="{Binding IsCorrect, Mode=TwoWay}" />
                                                    <TextBox Text="{Binding Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                                </WrapPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <Button Content="+"
                                        Command="{Binding AddPosAnsCommand}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.Resources>
                </ListView>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</UserControl>
