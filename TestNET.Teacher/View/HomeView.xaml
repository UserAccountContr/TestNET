<UserControl 
    x:Class="TestNET.Teacher.View.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:TestNET.Teacher.View"
	xmlns:model="clr-namespace:TestNET.Shared.Model;assembly=TestNET.Shared"
	xmlns:viewmodel="clr-namespace:TestNET.Teacher.ViewModel" 
	d:DataContext="{d:DesignInstance Type=viewmodel:HomeViewModel}"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0">

            <Label Content="{DynamicResource tests}" 
                   Style="{StaticResource LargeLabel}"/>

            <Button Content="{DynamicResource add}" 
                    Command="{Binding NewTestCommand}" 
                    Style="{StaticResource Btn}"/>

            <Button Content="{DynamicResource save}" 
                    Command="{Binding SaveTestCommand}"
                    Style="{StaticResource Btn}"/>

            <Button Content="{DynamicResource load}" 
                    Command="{Binding LoadTestCommand}"
                    Style="{StaticResource Btn}"/>

            <RadioButton GroupName="Lang"
                         Content="English"
                         IsChecked="True"
                         Command="{Binding SetLangCommand}"
                         CommandParameter="en"/>
            
            <RadioButton GroupName="Lang"
                         Content="Български"
                         Command="{Binding SetLangCommand}"
                         CommandParameter="bg"/>

        </WrapPanel>

        <ListView ItemsSource="{Binding Path=Tests}" 
                  Grid.Row="1"
                  Name="TestView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <Label Content="{Binding Name}"/>
                        <Button Content="{DynamicResource open}" 
                                Command="{Binding DataContext.OpenTestViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                CommandParameter="{Binding .}"
                                Style="{StaticResource Btn}"/>
                        <Button Content="{DynamicResource delete}" 
                                Command="{Binding DataContext.RemoveTestCommand, RelativeSource={RelativeSource AncestorType=ListView}}" 
                                CommandParameter="{Binding .}"
                                Style="{StaticResource Btn}"/>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
