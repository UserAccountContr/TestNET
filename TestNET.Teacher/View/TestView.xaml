<UserControl 
    x:Class="TestNET.Teacher.View.TestView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:TestNET.Teacher.View"
	xmlns:model="clr-namespace:TestNET.Shared.Model;assembly=TestNET.Shared"
	xmlns:sharedserv="clr-namespace:TestNET.Shared.Service;assembly=TestNET.Shared"
	xmlns:viewmodel="clr-namespace:TestNET.Teacher.ViewModel" 
    xmlns:serv="clr-namespace:TestNET.Teacher.Service"
    xmlns:latex="clr-namespace:WpfMath.Controls;assembly=WpfMath"
	d:DataContext="{d:DesignInstance Type=viewmodel:TestViewModel}"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="{DynamicResource back}"
              Command="{Binding DataContext.GoToHomeViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"
              IsEnabled="{Binding IsNotBusy}"/>
            <MenuItem Header="{DynamicResource start}"
              Command="{Binding ShareTestCommand}"
              IsEnabled="{Binding IsNotBusy}"/>
            <MenuItem Header="{DynamicResource stop}"
              Command="{Binding StopSharingTestCommand}"
              IsEnabled="{Binding IsBusy}"/>
            <MenuItem Header="{DynamicResource edit}"
              Command="{Binding DataContext.OpenEditTestViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"
              CommandParameter="{Binding Test}"
              IsEnabled="{Binding IsNotBusy}"/>
        </Menu>

        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!--
            <WrapPanel Grid.Row="0">
                
                <Label Content="Test"
                       Style="{DynamicResource LargeLabel}"/>
                <Button Content="{DynamicResource back}" 
                        Command="{Binding DataContext.GoToHomeViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{DynamicResource Btn}"/>
                <Button Content="{DynamicResource start}" 
                        Command="{Binding ShareTestCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{DynamicResource Btn}"/>
                <Button Content="{DynamicResource stop}" 
                        Command="{Binding StopSharingTestCommand}"
                        IsEnabled="{Binding IsBusy}"
                        Style="{DynamicResource Btn}"/>
                <Button Content="{DynamicResource edit}" 
                        Command="{Binding DataContext.OpenEditTestViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding Test}"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{DynamicResource Btn}"/>
                
                
            </WrapPanel>
                -->

                <StackPanel Grid.Row="0">
                    <Label ContentStringFormat="Test Name: {0}"
                       Content="{Binding Test.Name}"/>
                    <Label ContentStringFormat="Number of questions: {0}"
                       Content="{Binding Test.Questions.Count}"/>
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <Expander Header="{DynamicResource questions}"
                          ExpandDirection="Down"
                          IsExpanded="True">
                        <ListView ItemsSource="{Binding Test.Questions}">
                            <ListView.Resources>

                                <sharedserv:IndexConverter x:Key="IndexConverter" />

                                <DataTemplate DataType="{x:Type model:ShortAnswerQuestion}">
                                    <StackPanel>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="400"/>
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <WrapPanel Grid.Column="0">
                                                <Label Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"
                                                       ContentStringFormat="{}{0}."
                                                       FontSize="16"/>
                                                <Label Content="{Binding Text}"
                                                       FontSize="16">
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TextIsNotMath}"
                                                                             Value="True">
                                                                    <Setter Property="Visibility"
                                                                            Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                                <Label>
                                                    <Label.Content>
                                                        <latex:FormulaControl Formula="{Binding Text}"/>
                                                    </Label.Content>
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TextIsMath}"
                                                                             Value="True">
                                                                    <Setter Property="Visibility"
                                                                            Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                            </WrapPanel>
                                            <Label Grid.Column="1"
                                                   Content="{Binding Points}"
                                                   ContentStringFormat="{}Pts: {0}"/>
                                        </Grid>

                                        <TextBlock Text="Short answer"/>
                                        <!--
                            <Label ContentStringFormat="Answer: {0}"
                                   Content="{Binding Answer.Text}"
                                   Grid.Column="1"/>
                            -->
                                    </StackPanel>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type model:MultipleChoiceQuestion}">
                                    <DataTemplate.Resources>

                                        <DataTemplate x:Key="NoMath">
                                            <Label Content="{Binding Text}"/>
                                        </DataTemplate>
                                        <DataTemplate x:Key="WithMath">
                                            <Label>
                                                <Label.Content>
                                                    <latex:FormulaControl Formula="{Binding Text}"/>
                                                </Label.Content>
                                            </Label>
                                        </DataTemplate>

                                        <Style TargetType="ContentPresenter" x:Key="ContainerStyle">
                                            <Setter Property="ContentTemplate" Value="{StaticResource NoMath}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=DataContext.TextIsMath}"
                                                                     Value="True">
                                                    <Setter Property="ContentTemplate" 
                                                                    Value="{StaticResource WithMath}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataTemplate.Resources>

                                    <StackPanel>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="400"/>
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <WrapPanel Grid.Column="0" >
                                                <Label Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"
                                                       ContentStringFormat="{}{0}."
                                                       FontSize="16"/>
                                                <Label Content="{Binding Text}"
                                                       FontSize="16">
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TextIsNotMath}"
                                                                             Value="True">
                                                                    <Setter Property="Visibility"
                                                                            Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                                <Label>
                                                    <Label.Content>
                                                        <latex:FormulaControl Formula="{Binding Text}"
                                                                              SystemTextFontName="Times New Roman"
                                                                              Padding="0,0,0,10"/>
                                                    </Label.Content>
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TextIsMath}"
                                                                             Value="True">
                                                                    <Setter Property="Visibility"
                                                                            Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                            </WrapPanel>
                                            <Label Grid.Column="1"
                                               Content="{Binding Points}"
                                               ContentStringFormat="{}Pts: {0}"/>
                                        </Grid>

                                        <TextBlock Text="Possible answers"/>

                                        <ItemsControl ItemsSource="{Binding PossibleAnswers}"
                                                      ItemContainerStyle="{StaticResource ContainerStyle}"
                                                      Grid.Column="1">
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type model:MultipleChoiceManyQuestion}">
                                    <DataTemplate.Resources>

                                        <DataTemplate x:Key="NoMath">
                                            <Label Content="{Binding Text}"/>
                                        </DataTemplate>
                                        <DataTemplate x:Key="WithMath">
                                            <Label>
                                                <Label.Content>
                                                    <latex:FormulaControl Formula="{Binding Text}"/>
                                                </Label.Content>
                                            </Label>
                                        </DataTemplate>

                                        <Style TargetType="ContentPresenter" x:Key="ContainerStyle">
                                            <Setter Property="ContentTemplate" Value="{StaticResource NoMath}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=DataContext.TextIsMath}"
                                                             Value="True">
                                                    <Setter Property="ContentTemplate" 
                                                            Value="{StaticResource WithMath}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataTemplate.Resources>

                                    <StackPanel>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="400"/>
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <WrapPanel Grid.Column="0" >
                                                <Label Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"
                                                       ContentStringFormat="{}{0}."
                                                       FontSize="16"/>
                                                <Label Content="{Binding Text}"
                                                       FontSize="16">
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TextIsNotMath}"
                                                                             Value="True">
                                                                    <Setter Property="Visibility"
                                                                            Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                                <Label>
                                                    <Label.Content>
                                                        <latex:FormulaControl Formula="{Binding Text}"/>
                                                    </Label.Content>
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Setter Property="Visibility"
                                                                    Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TextIsMath}"
                                                                             Value="True">
                                                                    <Setter Property="Visibility"
                                                                            Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                            </WrapPanel>
                                            <Label Grid.Column="1"
                                               Content="{Binding Points}"
                                               ContentStringFormat="{}Pts: {0}"/>
                                        </Grid>

                                        <TextBlock Text="Possible answers"/>

                                        <ItemsControl ItemsSource="{Binding PossibleAnswers}"
                                                      ItemContainerStyle="{StaticResource ContainerStyle}"
                                                      Grid.Column="1">
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.Resources>
                        </ListView>
                    </Expander>
                    <Expander Header="Test settings"
                          ExpandDirection="Down">

                    </Expander>
                    <Expander Header="Submissions">
                        <ListView ItemsSource="{Binding Test.Submissions}">
                            <ListView.Resources>
                                <DataTemplate DataType="{x:Type model:Submission}">
                                    <Expander Header="{Binding Name}">

                                        <StackPanel>
                                            <Label Content="{Binding TimeSubmitted}"/>
                                            <Label Content="{Binding Points}"/>
                                            <ItemsControl ItemsSource="{Binding Answers.Questions}" >
                                                <ItemsControl.Resources>
                                                    <DataTemplate DataType="{x:Type model:ShortAnswerQuestion}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="100"/>
                                                                <ColumnDefinition Width="100"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>

                                                            <StackPanel Grid.Column="0">
                                                                <Label Content="{Binding Text}"/>
                                                            </StackPanel>

                                                            <StackPanel Grid.Column="2">
                                                                <Label Content="{Binding Answer.Text}"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </DataTemplate>

                                                    <DataTemplate DataType="{x:Type model:MultipleChoiceQuestion}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="100"/>
                                                                <ColumnDefinition Width="100"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>

                                                            <StackPanel Grid.Column="0">
                                                                <Label Content="{Binding Text}"/>
                                                            </StackPanel>

                                                            <StackPanel Grid.Column="2">
                                                                <ItemsControl ItemsSource="{Binding PossibleAnswers}">
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <RadioButton Content="{Binding Text}"
                                                                                         IsChecked="{Binding IsCorrect, Mode=OneWay}"
                                                                                         IsEnabled="False"/>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </StackPanel>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.Resources>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Expander>
                                </DataTemplate>
                            </ListView.Resources>
                        </ListView>
                    </Expander>
                    <Expander Header="Log">
                        <TextBlock Text="{Binding LogService.TestLog}"/>
                    </Expander>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</UserControl>
